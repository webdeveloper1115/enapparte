.container[ng-controller="ShowController" ng-init="initShows()"]
  br
  .row
    .col-md-3
      a.btn.btn-success[ui-sref="shows.edit"]= "Add New Show"

    .col-md-9
      / - @user.shows.each do |show|
      .col-sm-6.col-md-4[ng-repeat="show in shows"]
        .thumbnail.show
          img[ng-src="{{ show.coverPictureUrl }}"]
          .caption
            a.label.label-danger[href="" ng-show="!show.active" ng-click="toggleActive(show, $index)"]
              | Disabled (activate)
            a.label.label-success[href="" ng-show="show.active" ng-click="toggleActive(show, $index)"]
              | Enabled (deactivate)
            h3
              | {{ show.title }}
            .price
              | {{ show.price | currency }}
            .actions.pull-right
              a[ui-sref="shows.edit({ id: show.id })" title="Edit"]
                i.glyphicon.glyphicon-pencil
              '
              a[href="" title="Delete" ng-click="removeShow(show)"]
                i.glyphicon.glyphicon-trash
            .clearfix
