          = simple_form_for @user do |f|
            fieldset
              legend Change Password
              = f.input :password
              br
              = f.input :password_confirmation
              br
              br
            .form-actions.col-md-9.col-md-offset-3
              = f.button :submit, 'Change Password'

          br
          br
          br
          br
          br

          = simple_form_for @user do |f|
            fieldset
              legend Change Email
              = f.input :email
              br
              br
            .form-actions.col-md-9.col-md-offset-3
              = f.button :submit, 'Change Email'
