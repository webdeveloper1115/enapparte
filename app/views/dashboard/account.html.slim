  br
  .row
    .col-md-3
      br
      ul.nav.nav-pills.nav-stacked
        li.active
          a[href="#payment" data-toggle="tab"]= "Payment Preferences"
        li
          a[href="#information" data-toggle="tab"]= "Payment Information"
        li
          a[href="#security" data-toggle="tab"]= "Security"

    .col-md-9
